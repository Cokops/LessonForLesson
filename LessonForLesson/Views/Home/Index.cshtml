@model List<LessonForLesson.Data.DataForDB>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h1>Просмотр данных</h1>
    <form method="get" class="row g-3 mb-4">
        <div class="col-auto">
            <label class="form-label">Документов на странице:</label>
            <input type="number"
                   name="pageSize"
                   class="form-control"
                   min="1"
                   max="200"
                   value="@ViewBag.PageSize">
        </div>
        <div class="col-auto">
            <label class="form-label">Страница:</label>
            <input type="number"
                   name="pageNumber"
                   class="form-control"
                   min="1"
                   max="@ViewBag.TotalPages"
                   value="@ViewBag.CurrentPage">
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Показать</button>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Название</th>
                    <th>Номер</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.number</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p>
            | Страница @ViewBag.CurrentPage из @ViewBag.TotalPages |
        </p>
    </div>
</div>